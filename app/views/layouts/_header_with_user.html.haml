.header.row
	%nav.navbar.navbar-default.navbar-fixed-top{:role=>'navigation'}
		.container.col-lg-6.col-md-6.col-lg-offset-3.col-md-offset-3
			.navbar-header.with_user
				.avatar_icon
					.dropdown
						=image_tag(current_user.avatar_url,:size=>'50x50',:class=>'dropdown-toggle','data-toggle'=>'dropdown')
						-#=link_to '-Sign out-', user_sign_out_path, :method => :delete
				.application_title_header
					=link_to 'Bomberball','',:onclick=>"$('html, body').animate({scrollTop:$('.landing').position().top},'slow')"
				.user_name
					=link_to current_user.name,'',:onclick=>"$('html, body').animate({scrollTop:$('body').position().top},'slow')"
					= link_to '-Sign out-', user_sign_out_path, :method => :delete
					
				
				
