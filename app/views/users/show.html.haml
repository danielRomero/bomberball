.show_user.row
	.col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-xs-12.col-sm-12
		%header
			.jumbotron
				.container
					%h1#user_name_user_show
						='Hi ' +@user.name+'!'
					%p
						='Here you can personalize your profile.'
					=link_to 'PRUEBAS', pruebas_path
		%article.row
			.content_box.col-lg-6.col-md-6.col-xs-12.col-sm-12#user_profile_holder
				=render :partial=> 'users/edit_user_profile'				
			.content_box.col-lg-6.col-md-6.col-xs-12.col-sm-12#colour_box_holder
				=render(:partial => 'profiles/personalize_colours_box')
		%footer
			%button.btn.btn-primary.btn-lg.btn-block{:type=>'button',:onclick=>"location.href='#{new_game_path}';"}='Play now!'
