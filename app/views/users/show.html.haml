.show_user.row
	.col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-xs-12.col-sm-12
		%header
			.jumbotron
				.container
					%h1
						='Hi ' +@user.name+'!'
					%p
						='Here you can personalize your profile.'
		%article.row
			.content_box.col-lg-6.col-md-6.col-xs-12.col-sm-12
				.box
					.title
						%h4
							='Social profile'
					.social_profile
						.avatar_placeholder
							=image_tag(@user.avatar_url, size: "200x200", :alt=>'avatar')
						-if(@socials.count>1)
							.avatar_chooser
								=@socials.count
						.name_placeholder
							=@user.name
						-if(@socials.count>1)
							.name_chooser
								=@socials.count
			.content_box.col-lg-6.col-md-6.col-xs-12.col-sm-12
				=render(:partial => 'users/personalize_colours_box')
		%footer
			%button.btn.btn-primary.btn-lg.btn-block{:type=>'button'}='Play now!'
