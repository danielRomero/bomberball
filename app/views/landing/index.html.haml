								=link_to(login_google_path) do
									.icon-google-plus-sign.icon
								=link_to(login_beperk_path) do
									.beperk-icon-enso_box.icon{:style=>'font-size:52px;'}
							.caption
								%h3='Step 1'
								%p='Enter with your favorite social network.'
					.content_box.col-lg-6.col-md-6.col-xs-12.col-sm-12
						.box{:style=>'height:300px;'}
							.social_actions.canvas_personalizes
								%canvas#canvas_personalize{:width=>'205'}
									:javascript
										var x = 105;
										var y = 40;
										var width = 40;
										var height = 40;
										var animation1=0;
										function dibujar(){
											$("#canvas_personalize").clearCanvas();
											$("#canvas_personalize").drawEllipse({
											  fillStyle: "#c33",
											  x: x, y: y+animation1,
											  width: width, height: height,
											}).drawEllipse({
											  fillStyle: "#000",
											  x:(x-parseInt(width/4)) , y:(y-parseInt(height/6))+animation1,
											  width: parseInt(width*0.2), height: parseInt(height*0.3),
											}).drawEllipse({
											  fillStyle: "#000",
											  x:(x+parseInt(width/4)) , y:(y-parseInt(height/6))+animation1,
											  width: parseInt(width*0.2), height: parseInt(height*0.3),
											}).drawEllipse({
											  fillStyle: "green",
											  x: x, y: y+height+height/2,
											  width: (width*2)+animation1,
											  height: (height*2)-animation1
											}).drawEllipse({
											  fillStyle: "red",
											  x: parseInt(x+width/1.1), y: parseInt((y+(height/2)+height/3)+(animation1/2)),
											  width: parseInt(width*0.2),
											  height: parseInt(height*0.2)
											}).drawEllipse({
											  fillStyle: "red",
											  x: parseInt(x-width/1.1), y: parseInt((y+(height/2)+height/3)-(animation1/2)),
											  width: parseInt(width*0.2),
											  height: parseInt(height*0.2)
											}).drawEllipse({
											  fillStyle: "black",
											  x: parseInt((x+width/1.4)+(animation1/2)), y: parseInt(y+height/2+height*1.9),
											  width: parseInt(width*0.2),
											  height: parseInt(height*0.2)
											}).drawEllipse({
											  fillStyle: "black",
											  x: parseInt((x-width/1.4)-(animation1/2)),  y: parseInt(y+height/2+height*1.9),
											  width: parseInt(width*0.2),
											  height: parseInt(height*0.2)
											});

											animation1=1;

										}
										dibujar();

							.caption
								%h3='Step 2'
								%p='Personalize your bombardier.'
					%div{:style=>'clear:both'}
					.content_box.col-lg-12.col-md-12.col-xs-12.col-sm-12
						.box{:style=>'height:300px;'}
							='Aquí va Imagen de Play with your friends.'
							.caption
								%h3='Step 3'
								%p='Play with your friends.'

