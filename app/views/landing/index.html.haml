				.row.text-center
					.content_box.col-lg-6.col-md-6.col-xs-12.col-sm-12
						.box
							.social_actions
								=link_to(login_facebook_path) do
									.icon-facebook-sign.icon
								=link_to('#twitter_email','data-toggle'=>'modal') do
									.icon-twitter-sign.icon
