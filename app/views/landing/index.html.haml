								%p='Enter with your favorite social network.'
							%hr
							%h6
								=link_to 'Terms and license, data usage, cookies policy', privacy_license_and_terms_path,:target=>'_blank',:class=>'cool_anchor'
					.content_box.col-lg-6.col-md-6.col-xs-12.col-sm-12
						.box{:style=>'height:380px;'}
							.social_actions.canvas_personalizes
								%canvas#canvas_personalize{:width=>'205'}
									:javascript
										var x = 105;
										var y = 40;
										var width = 40;
										var height = 40;
										var animation1=0;
										function dibujar(){
											$("#canvas_personalize").clearCanvas();
											$("#canvas_personalize").drawEllipse({
											  fillStyle: "#c33",
											  x: x, y: y+animation1,
											  width: width, height: height,
											}).drawEllipse({
											  fillStyle: "#000",
											  x:(x-parseInt(width/4)) , y:(y-parseInt(height/6))+animation1,
											  width: parseInt(width*0.2), height: parseInt(height*0.3),
											}).drawEllipse({
											  fillStyle: "#000",
											  x:(x+parseInt(width/4)) , y:(y-parseInt(height/6))+animation1,
											  width: parseInt(width*0.2), height: parseInt(height*0.3),
											}).drawEllipse({
											  fillStyle: "green",
											  x: x, y: y+height+height/2,
											  width: (width*2)+animation1,
											  height: (height*2)-animation1
											}).drawEllipse({
											  fillStyle: "red",
											  x: parseInt(x+width/1.1), y: parseInt((y+(height/2)+height/3)+(animation1/2)),
											  width: parseInt(width*0.2),
											  height: parseInt(height*0.2)
											}).drawEllipse({
											  fillStyle: "red",
											  x: parseInt(x-width/1.1), y: parseInt((y+(height/2)+height/3)-(animation1/2)),
											  width: parseInt(width*0.2),
											  height: parseInt(height*0.2)
											}).drawEllipse({
											  fillStyle: "black",
											  x: parseInt((x+width/1.4)+(animation1/2)), y: parseInt(y+height/2+height*1.9),
											  width: parseInt(width*0.2),
											  height: parseInt(height*0.2)
											}).drawEllipse({
											  fillStyle: "black",
											  x: parseInt((x-width/1.4)-(animation1/2)),  y: parseInt(y+height/2+height*1.9),
											  width: parseInt(width*0.2),
											  height: parseInt(height*0.2)
											});

											animation1=1;

										}
										dibujar();

							.caption
								%h3='Step 2'
								%p='Personalize your bombardier.'
							%hr
							%h6
								='some text here because simetry is important in this boxes'
