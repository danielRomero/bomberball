.landing
	.header
		.navbar.navbar-fixed-top
			.container.col-lg-6.col-lg-offset-3
				%button{:type=>"button", :class=>"navbar-toggle", 'data-toggle'=>"collapse", 'data-target'=>".navbar-responsive-collapse"}
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
				=link_to 'Bomberball','',:class=>'navbar-brand',:onclick=>"$('html, body').animate({scrollTop:$('.landing').position().top},'slow')"
				.nav-collapse.navbar-responsive-collapse.collapse
					%ul.nav.navbar-nav.pull-right
						%li
							= link_to "How it works",'#how_works',:onclick=>"$('html, body').animate({scrollTop:$('#how_works').position().top},'slow')"
						%li
							= link_to "Devices",'#devices',:onclick=>"$('html, body').animate({scrollTop:$('#devices').position().top},'slow')"
						%li
							= link_to "About Me",'#about',:onclick=>"$('html, body').animate({scrollTop:$('#about').position().top},'slow')"
						%li							
							= link_to('#login_modal','data-toggle'=>'modal') do
								.icon-caret-right{:style=>'float:left;color:#EE6162;padding-right:5px;line-height: 18px;'}
								="Play now"
	-# fin header
	-# cita
	.content_title_1#bomberman_title
		%h2.text-center.active='"It looks like a classic Bomberman game"'
		%h2.text-center='"It looks like a classic Bomberman game1"'
		%h2.text-center='"It looks like a classic Bomberman game2"'
		%h2.text-center='"It looks like a classic Bomberman game3"'
		%h2.text-center='"It looks like a classic Bomberman game4"'
	-# cajas explicativas how works con 3 pasos
	.content_title_2#how_works
		.row
			.col-lg-6.col-lg-offset-3.col-12.col-sm-12
				.title{:style=>'padding-bottom:15px;'}
					%h2.text-center='Start easy!'
				.row.text-center
					.content_box.col-lg-6.col-12.col-sm-12
						.box
							.social_actions
								=link_to(login_facebook_path) do
									.icon-facebook-sign.icon
								=link_to(login_twitter_path) do
									.icon-twitter-sign.icon
								%br
								=link_to(login_google_path) do
									.icon-google-plus-sign.icon
								=link_to(login_beperk_path) do
									.beperk-icon-enso_box.icon
							.caption
								%h3='Step 1'
								%p='Enter with your favorite social network.'
					.content_box.col-lg-6.col-12.col-sm-12
						.box{:style=>'height:300px;'}
							='Aqui va Imagen de Personalize your bombardier.'
							.caption
								%h3='Step 2'
								%p='Personalize your bombardier.'
					.content_box.col-lg-12.col-12.col-sm-12
						.box{:style=>'height:300px;'}
							='Aquí va Imagen de Play with your friends.'
							.caption
								%h3='Step 3'
								%p='Play with your friends.'

	-# fin cajas
	%div{:style=>'height:1px;width:100%;color:#2E3138;'}
	-# devices
	.content_title_3#devices
		.row
			.col-lg-6.col-lg-offset-3.col-12.col-sm-12
				.title					
					%h3.text-center='Available in all devices by browser'
				.devices
					.row.text-center
						.col-lg-3.col-6.col-sm-6
							.device.icon-mobile-phone
						.col-lg-3.col-6.col-sm-6
							.device.icon-tablet
						.col-lg-3.col-6.col-sm-6
							.device.icon-laptop
						.col-lg-3.col-6.col-sm-6
							.device.icon-desktop
	-# fin devices
