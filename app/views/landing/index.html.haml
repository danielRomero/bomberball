	-# MODAL WINDOW
	.modal.fade#login_modal
		.modal-dialog
			.modal-content
				.modal-header
					%button.close{:type=>'button','data-dismiss'=>'modal', 'aria-hidden'=>'true'}='x'
					%h4.modal-title='Enter with your social network'
				.modal-body
					.social_actions
						=link_to(login_facebook_path) do
							.icon-facebook-sign.icon
						=link_to('#twitter_email','data-toggle'=>'modal',:onclick=>"$('#login_modal').find('.close').click();") do
							.icon-twitter-sign.icon
						=link_to(login_google_path) do
							.icon-google-plus-sign.icon
						=link_to(login_beperk_path) do
							.beperk-icon-enso_box.icon{:style=>'font-size: 52px; line-height:50px;'}
					%hr
					%h6
						=link_to 'Terms and license, data usage, cookies policy', privacy_license_and_terms_path,:target=>'_blank',:class=>'cool_anchor_dark'
	-# MODAL WINDOW request twitter email
	.modal.fade#twitter_email
		.modal-dialog
			.modal-content
				.modal-header
					%button.close{:type=>'button','data-dismiss'=>'modal', 'aria-hidden'=>'true'}='x'
					%h4.modal-title='With Twitter we need your email address'
				.modal-body
					=form_tag(login_twitter_post_path,:class=>'form-inline',:role=>'form') do
						.form-group
							=email_field('twitter_email','',:required=>'required',:class=>'form-control',:placeholder=>'example@email.com')
						=submit_tag('Submit',:id=>'twitter_email_submit',:class=>'btn btn-primary')
						%hr
						%h6
							=link_to 'Terms and license, data usage, cookies policy', privacy_license_and_terms_path,:target=>'_blank',:class=>'cool_anchor_dark'
	:javascript
		$(document).ready(function() {
			$('#twitter_email').draggable();
			$('#login_modal').draggable();
		});